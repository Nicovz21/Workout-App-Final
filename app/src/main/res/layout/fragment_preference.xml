<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreferenceFragment">

    <ImageView
        android:id="@+id/equipment"
        android:layout_width="428dp"
        android:layout_height="232dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/equipment"
        app:layout_constraintBottom_toTopOf="@+id/question_three"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/no_weights"
        android:layout_width="150dp"
        android:layout_height="244dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="64dp"
        android:src="@drawable/noweightssmaller"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/next_preference"
        app:layout_constraintTop_toBottomOf="@+id/question_three" />

    <ImageView
        android:id="@+id/weights"
        android:layout_width="153dp"
        android:layout_height="225dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/weightssmaller"
        app:layout_constraintBottom_toTopOf="@+id/next_preference"
        app:layout_constraintEnd_toStartOf="@+id/next_preference"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_three" />

    <Button
        android:id="@+id/next_preference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="27dp"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/no_weights"
        app:layout_constraintStart_toEndOf="@+id/weights" />

    <TextView
        android:id="@+id/question_three"
        android:layout_width="378dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="15dp"
        android:textSize="25dp"
        android:text="@string/question_three"
        app:layout_constraintBottom_toTopOf="@+id/no_weights"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equipment" />
</androidx.constraintlayout.widget.ConstraintLayout>