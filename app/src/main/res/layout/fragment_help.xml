<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpFragment">

    <ImageView
        android:id="@+id/challenge_image"
        android:layout_width="489dp"
        android:layout_height="221dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/challengesmaller"
        app:layout_constraintBottom_toTopOf="@+id/level_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.653"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/level_question"
        android:layout_width="303dp"
        android:layout_height="28dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="10dp"
        android:text="@string/help_level_question"
        app:layout_constraintBottom_toTopOf="@+id/level_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challenge_image" />

    <TextView
        android:id="@+id/level_answer"
        android:layout_width="304dp"
        android:layout_height="49dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="13dp"
        android:text="@string/help_level_answer"
        app:layout_constraintBottom_toTopOf="@+id/rest_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level_question" />

    <TextView
        android:id="@+id/rest_question"
        android:layout_width="198dp"
        android:layout_height="23dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="155dp"
        android:text="@string/help_rest_question"
        app:layout_constraintBottom_toTopOf="@+id/rest_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level_answer" />

    <TextView
        android:id="@+id/rest_answer"
        android:layout_width="178dp"
        android:layout_height="52dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="175dp"
        android:text="@string/help_rest_answer"
        app:layout_constraintBottom_toTopOf="@+id/sources_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rest_question" />

    <TextView
        android:id="@+id/sources_title"
        android:layout_width="165dp"
        android:layout_height="26dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="188dp"
        android:layout_marginBottom="2dp"
        android:text="@string/help_image_sources_title"
        app:layout_constraintBottom_toTopOf="@+id/sources"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rest_answer" />

    <TextView
        android:id="@+id/sources"
        android:layout_width="304dp"
        android:layout_height="62dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="50dp"
        android:text="@string/help_image_soruces"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sources_title" />

</androidx.constraintlayout.widget.ConstraintLayout>