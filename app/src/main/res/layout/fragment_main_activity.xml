<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivityFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/BeginnerImage"
        android:layout_width="313dp"
        android:layout_height="226dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/beginnerresizewtext"
        app:layout_constraintBottom_toTopOf="@+id/ExperiencedImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <ImageView
        android:id="@+id/ExperiencedImage"
        android:layout_width="298dp"
        android:layout_height="199dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="2dp"

        android:layout_marginEnd="10dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/experiencedresizewtext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BeginnerImage" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="38dp"
        android:text="@string/question_one"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/BeginnerImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>